@page "/"
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>TemuLinks - Home</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4">Willkommen bei TemuLinks</h1>
            <p class="lead">Verwalten Sie Ihre Temu-Links zentral und teilen Sie sie mit anderen.</p>
        </div>
    </div>

    <AuthorizeView>
        <Authorized>
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-link-45deg"></i> Meine Links
                            </h5>
                            <p class="card-text">Verwalten Sie Ihre gespeicherten Temu-Links.</p>
                            <a href="/temulinks" class="btn btn-primary">Links anzeigen</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-key"></i> API-Schlüssel
                            </h5>
                            <p class="card-text">Verwalten Sie Ihre API-Schlüssel für die Chrome-Extension.</p>
                            <a href="/api-keys" class="btn btn-primary">API-Schlüssel verwalten</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-globe"></i> Öffentliche Links
                            </h5>
                            <p class="card-text">Entdecken Sie öffentlich geteilte Temu-Links.</p>
                            <a href="/public-links" class="btn btn-primary">Öffentliche Links</a>
                        </div>
                    </div>
                </div>
            </div>
        </Authorized>
        <NotAuthorized>
            <div class="row mt-4">
                <div class="col-md-8 mx-auto">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title">Melden Sie sich an</h5>
                            <p class="card-text">Um TemuLinks zu nutzen, müssen Sie sich mit Ihrem Microsoft-Konto anmelden.</p>
                            <a href="/login" class="btn btn-primary btn-lg">
                                <i class="bi bi-microsoft"></i> Mit Microsoft anmelden
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>
