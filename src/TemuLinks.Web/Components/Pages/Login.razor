@page "/login"
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Anmelden - TemuLinks</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Anmelden bei TemuLinks</h3>
                </div>
                <div class="card-body text-center">
                    <p>Melden Sie sich mit Ihrem Microsoft-Konto an, um auf Ihre TemuLinks zuzugreifen.</p>
                    <a href="/signin-microsoft" class="btn btn-primary btn-lg">
                        <i class="bi bi-microsoft"></i> Mit Microsoft anmelden
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        // Pr√ºfen ob bereits angemeldet
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        if (authState.User.Identity?.IsAuthenticated == true)
        {
            Navigation.NavigateTo("/");
        }
    }
}
